{
  "name": "colors",
  "version": "1.0.0",
  "description": "140 web colors",
  "main": "",
  "scripts": {
    "stylus:dev": "mkdir -p src/public/css; node_modules/stylus/bin/stylus src/public/stylus/main.styl -c -o src/public/css/main.css",
    "stylus:dist": "mkdir -p src/public/css; node_modules/stylus/bin/stylus public/stylus/main.styl -c -o public/css/main.css",
    "uglify": "mkdir -p web/dist/js && uglifyjs src/public/js/*.js -m -o src/public/dist/js/main.js",
    "autoprefixer:dev": "postcss -u autoprefixer -r src/public/css/*.css",
    "autoprefixer:dist": "postcss -u autoprefixer -r src/public/css/*.css",
    "lint:js": "./node_modules/.bin/eslint web/src/js",
    "build:css": "npm run stylus:dev; npm run autoprefixer:dev",
    "watch:css": "onchange 'src/public/stylus/*.styl' -- npm run build:css",
    "watch:js": "onchange 'src/public/js/main.js' -- npm run browserify:dev",
    "browserify:dev": "browserify src/public/js/main.js -o src/public/js/bundle.js",
    "browserify:dist": "browserify public/js/main.js -o public/js/bundle.js",
    "docker:up": "docker-compose build; docker-compose up -d",
    "docker:down": "docker-compose down",
    "dev": "node_modules/parallelshell/index.js 'npm run watch:css' 'npm run watch:js' 'npm run start:dev' 'node-inspector'",
    "start:dev": "cd src; nodemon --debug app.js",
    "start": "node app.js",
    "build": "npm run stylus:dist; npm run autoprefixer:dist; npm run browserify:dist"
  },
  "author": "Simon Breiter",
  "license": "MIT",
  "devDependencies": {
    "imagemin-cli": "^3.0.0",
    "node-inspector": "^0.12.8",
    "nodemon": "^1.10.0",
    "onchange": "^2.5.0",
    "uglify-js": "^2.7.0"
  },
  "dependencies": {
    "autoprefixer": "^6.3.7",
    "browserify": "^13.1.0",
    "express": "^4.14.0",
    "jquery": "^3.1.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.2",
    "pug": "^2.0.0-beta4",
    "stylus": "^0.54.5"
  }
}
